<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MasterDetail.MiPerfil"
             BackgroundImage="orangebg.png"
             Title="Mi Perfil">
    <ContentPage.Padding>

        <OnPlatform x:TypeArguments="Thickness">

        </OnPlatform>

    </ContentPage.Padding>
    
    <ContentPage.Content >

        <StackLayout>
            
            
            <Label x:Name="lblRut" Text="" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Label x:Name="lblName" Text="" HorizontalOptions="Center" VerticalOptions="Center" />
            <Label x:Name="lblLastname" Text="" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Label x:Name="lblSuperm" Text="" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Label x:Name="lblPhone" Text="" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Label x:Name="lblBirthdate" Text="{Binding BirthDate, StringFormat='{0:MMMM dd, yyyy}'}" HorizontalOptions="Center" VerticalOptions="Center" />
            <Label x:Name="lblGender" Text="" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Label x:Name="lblAdress" Text="" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Label x:Name="lblJobTitle" Text="" HorizontalOptions="Center" VerticalOptions="Center"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
